@{
    ViewData["Title"] = "Agregar deportista";
}
<h1>AGREGAR DEPORTISTA</h1>
<form action="GuardarDeportista">
<p>INGRESE LA FOTO DEL DEPORTISTA</p>
  <input type="text" id="fname" name="Foto"><br><br>
  <p>INGRESE EL APELLIDO DEL DEPORTISTA</p>
  <input type="text" id="lname" name="Apellido"><br><br>
  <p>INGRESE EL NOMBRE DEL DEPORTISTA</p>
  <input type="text" id="lname" name="Nombre"><br><br>
  <p>INGRESE LA FECHA DE NACIMIENTO DEL DEPORTISTA</p>
  <input type="date" id="lname" name="FechaNacimiento"><br><br>
  <p>INGRESE EL PAIS DEL DEPORTISTA</p>
  <input type="select" id="lname" name="IdPais"><br><br>
  <p>INGRESE EL DEPORTE DEL DEPORTISTA</p>
  <input type="select" id="lname" name="IdDeporte"><br><br>
    <input type="submit" value="Submit">
</form>